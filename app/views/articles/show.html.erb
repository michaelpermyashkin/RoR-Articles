<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">

    <title>Articles</title>
    <meta name="description" content="The HTML5 Herald">
    <meta name="author" content="SitePoint">

    <link rel="stylesheet" href="">

</head>

<body>
    <div class="bg-dark py-3 text-center text-light">
        <h4>Blogs</h4>
    </div>

    <div class="container my-5">

        <h4><%= @article.title %></h4>
        <small class="text-muted">Posted on: <%= localize(@article.created_at, :format => :long) %></small>
        <hr>
        <p class="px-3"><%= @article.body %></p>

        <%= link_to "Edit", edit_article_path(@article), :class => "mt-5 ml-2 btn btn-sm btn-primary text-light" %>
        <%= link_to "Destory", article_path(@article),
                method: :delete,
                data: {confirm: "Are you sure? "},
                :class => "mt-5 ml-2 btn btn-sm btn-danger text-light" %>

    </div>
 

</body>

</html>

